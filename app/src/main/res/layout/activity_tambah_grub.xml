<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    tools:context=".tambah_grub">
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Grub / Channel"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        />
    <EditText
        android:id="@+id/judul_grub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:hint="Judul Grub / Channel"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/isi_grub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul_grub"
        android:hint="Tulis Deskripsi Grub / Channel"
        android:inputType="textMultiLine"
        android:minLines="10"
        android:gravity="start|top"
        android:scrollbars="vertical" />
    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/isi_grub"
        android:text="SAVE"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/save"
        android:text="Back To Homepage"
        android:textSize="20sp"
        />
</RelativeLayout>